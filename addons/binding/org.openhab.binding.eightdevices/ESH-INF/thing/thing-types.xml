<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="eightdevices"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	
	
	<thing-type id="s3700">
        <label>EightDevices Binding Thing</label>
        <description>Sample thing for EightDevices Binding</description>

        <channels>
            <channel id="activePower" typeId="activePower" />
            <channel id="activeEnergy" typeId="activeEnergy" />
            <channel id="reactivePower" typeId="reactivePower" />
            <channel id="reactiveEnergy" typeId="reactiveEnergy" />
        </channels>
        
        <config-description>
            <parameter name="uid" type="text" required="true">
                <label>Name</label>
                <description>Name of the sensor.
                </description>
            </parameter>
        </config-description>
    </thing-type>
    
    <channel-type id="activeEnergy">
        <item-type>Number</item-type>
        <label>ActiveEnergy</label>
        <description>Active Energy</description>
        <category>ActiveEnergy</category>
        <state readOnly="true" pattern="%.7f">
        </state>
    </channel-type>
    
    <channel-type id="reactiveEnergy">
        <item-type>Number</item-type>
        <label>ReactiveEnergy</label>
        <description>Reactive Energy</description>
        <category>ReactiveEnergy</category>
        <state readOnly="true" pattern="%.7f">
        </state>
    </channel-type>
    
    <channel-type id="activePower">
        <item-type>Number</item-type>
        <label>ActivePower</label>
        <description>Active Power</description>
        <category>ActivePower</category>
        <state readOnly="true" pattern="%.7f">
        </state>
    </channel-type>
    
    <channel-type id="reactivePower">
        <item-type>Number</item-type>
        <label>ReactivePower</label>
        <description>Reactive Power</description>
        <category>ReactivePower</category>
        <state readOnly="true" pattern="%.7f">
        </state>
    </channel-type>
    
    <channel-type id="relay">
        <item-type>Switch</item-type>
        <label>Relay</label>
        <description>To turn off or on the relay</description>
        <category>Switch</category>
        <event>
            <options>
                <option value="ON">ON</option>
                <option value="OFF">OFF</option>
            </options>
        </event>
    </channel-type>
	
	
	<thing-type id="s3800">
		<label>EightDevices Binding Thing</label>
		<description>Sample thing for EightDevices Binding</description>

		<channels>
            <channel id="temperature" typeId="temperature" />
            <channel id="humidity" typeId="humidity" />
            <channel id="voltage" typeId="voltage" />
		</channels>
		
		<config-description>
            <parameter name="uid" type="text" required="true">
                <label>Name</label>
                <description>Name of the sensor.
                </description>
            </parameter>
        </config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="sample-channel">
		<item-type>eightdevicesItem</item-type>
		<label>EightDevices Binding Channel</label>
		<description>Sample channel for EightDevices Binding</description>
	</channel-type>
	
	<channel-type id="temperature">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Current temperature in degrees celsius</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f Â°C">
        </state>
    </channel-type>

    <channel-type id="humidity">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>Current humidity in %</description>
        <category>Humidity</category>
        <state readOnly="true" pattern="%d %%">
        </state>
    </channel-type>
    
    
    <thing-type id="s4400">
        <label>EightDevices Binding Thing</label>
        <description>Sample thing for EightDevices Binding</description>

        <channels>
            <channel id="temperature" typeId="temperature" />
            <channel id="magneticField" typeId="magneticField" />
            <channel id="magneticCounter" typeId="magneticCounter" />
